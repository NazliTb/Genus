<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="700dp"

    android:gravity="center">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <Button
                android:id="@+id/dismiss"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="#04D9D9"
                android:fontFamily="@font/orbitron"
                android:text="X"
                android:textColor="#0A1240"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/Pic"
                android:layout_width="197dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/user3" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/Pic"
        app:layout_constraintEnd_toEndOf="@id/Pic"
        app:layout_constraintStart_toStartOf="@id/Pic"
        app:layout_constraintTop_toTopOf="@id/editpassword"
        >

            <EditText
                android:id="@+id/editusername"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/my_border"
                android:drawableStart="@drawable/ic_baseline_person_34"
                android:drawableLeft="@drawable/ic_baseline_person_34"
                android:drawablePadding="15dp"
                android:fontFamily="@font/orbitron"
                android:hint="username"
                android:textAlignment="viewStart"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlCompat" />

        <ImageButton
            android:id="@+id/editUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#00ED0707"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_pencil" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/editusername"
        app:layout_constraintEnd_toEndOf="@id/Pic"
        app:layout_constraintStart_toStartOf="@id/Pic"
        app:layout_constraintTop_toTopOf="@id/editpassword"
        >

            <EditText
                android:id="@+id/editOldpassword"
                android:inputType="textPassword"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/my_border"
                android:drawableStart="@drawable/ic_baseline_lock_30"
                android:drawableLeft="@drawable/ic_baseline_lock_30"
                android:drawablePadding="15dp"
                android:fontFamily="@font/orbitron"
                android:hint="old password"
                android:textAlignment="viewStart"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.558"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.635"
                tools:ignore="RtlCompat" />



    </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="@id/editOldpassword"
                app:layout_constraintEnd_toEndOf="@id/Pic"
                app:layout_constraintStart_toStartOf="@id/Pic"
                app:layout_constraintTop_toTopOf="@id/editcpassword"
                >

                <EditText
                    android:id="@+id/editpassword"
                    android:inputType="textPassword"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/my_border"
                    android:drawableStart="@drawable/ic_baseline_lock_30"
                    android:drawableLeft="@drawable/ic_baseline_lock_30"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/orbitron"
                    android:hint="password"
                    android:textAlignment="viewStart"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.558"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.635"
                    tools:ignore="RtlCompat" />


            </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/editpassword"
        app:layout_constraintEnd_toEndOf="@id/Pic"
        app:layout_constraintStart_toStartOf="@id/Pic"
        app:layout_constraintTop_toTopOf="parent"
        >
            <EditText
                android:id="@+id/editcpassword"
                android:inputType="textPassword"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/my_border"
                android:drawableStart="@drawable/ic_baseline_lock_30"
                android:drawableLeft="@drawable/ic_baseline_lock_30"
                android:drawablePadding="15dp"
                android:fontFamily="@font/orbitron"
                android:hint="Confirm password"
                android:textAlignment="viewStart"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.558"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.635"
                tools:ignore="RtlCompat" />

    </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="70dp" />
            <Button
                android:id="@+id/updatePassword"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_border"
                android:fontFamily="@font/orbitron"
                android:text="Update"
                android:textColor="#0A1240"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

</RelativeLayout>

