<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp">

    <!--<SearchView
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="league of legends"
        android:fontFamily="@font/roboto"/>-->

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mt_placeholder="Search for games"
        app:mt_hint="search for games"/>

    <TextView
        android:id="@+id/favlistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_bar"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto"
        android:text="My Favorite Games"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favlistTitle"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/gamelistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerViewFav"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto"
        android:text="My Games"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewGames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gamelistTitle"
        android:layout_marginTop="20sp"/>


</RelativeLayout>