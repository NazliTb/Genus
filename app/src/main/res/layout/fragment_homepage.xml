<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp">

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mt_hint="search for games"
        app:mt_placeholder="Search for games" />


        <TextView
            android:id="@+id/topPicksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_bar"
            android:layout_marginTop="20sp"
            android:layout_weight="1"
            android:fontFamily="@font/orbitron"
            android:text="Our Top Picks"
            android:textSize="25sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTopPicks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topPicksTitle"
            android:layout_marginTop="10sp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/trendingGamesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerViewTopPicks"
            android:layout_marginTop="20sp"
            android:layout_weight="1"
            android:fontFamily="@font/orbitron"
            android:text="Trending Games"
            android:textSize="25sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTrendingGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trendingGamesTitle"
            android:layout_marginTop="20sp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/bestRateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerViewTrendingGames"
            android:layout_marginTop="20sp"
            android:layout_weight="1"
            android:fontFamily="@font/orbitron"
            android:text="Best Rate"
            android:textSize="25sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBestRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bestRateTitle"
            android:layout_marginTop="20sp"
            android:orientation="horizontal" />

</RelativeLayout>
